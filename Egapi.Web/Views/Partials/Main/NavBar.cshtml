@inherits Umbraco.Web.Mvc.UmbracoViewPage

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <div class="row">
            <a class="navbar-brand" href="/">
                <img src="../../imgs/logo.png" height="40" alt="">
            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <!--contactos estariam aqui tambem-->
                        <!--serviços estariam aqui tambem-->
                        <a class="nav-link" href="#">Sobre nós<span class="sr-only">(current)</span></a>
                    </li>
                    @{
                        string[] navLinks = { "Mecados", "Soluções", "Produtos", "Notícias" };
                    }
                    @for (int i = 0; i < navLinks.Count(); i++)
                    {
                        <li class="nav-item dropdown">
                            <!-- href="/content/" -->
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @navLinks[i]
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </li>
                    }
                    <li id="search" class="nav-item">
                        <i class="text-light fa-solid fa-magnifying-glass"></i>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline my-2 my-lg-0">
                            <input id="text-box-search" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>
<script>
    $(document).ready(function () {
        //mostra a text-box search
        $("#search").click(function () {
            $("#text-box-search").animate({
                opacity: "toggle",
                width: "toggle"
            });
        });
    });
</script>