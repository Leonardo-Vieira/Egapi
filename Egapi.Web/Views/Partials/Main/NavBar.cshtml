@inherits Umbraco.Web.Mvc.UmbracoViewPage

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <div class="row">
            <a class="navbar-brand" href="/">
                <img src="../../imgs/logo.png" height="40" alt="">
            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <!--contactos estariam aqui tambem-->
                        <!--serviços estariam aqui tambem-->
                        <a class="nav-link" href="#">Sobre nós<span class="sr-only">(current)</span></a>
                    </li>
                    @{
                        var contentPage = Umbraco.ContentAtRoot().DescendantsOrSelfOfType("contentPage").ToList();
                        
                        //falta colocar as Tags a darem |
                        //                              |
                        //                             \_/
                        string[] navLinks = { "Soluções", "Mecados", "Produtos", "Notícias" };
                    }
                    @foreach (var navLink in navLinks)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @navLink
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @if (navLink == "Soluções")
                                {
                                    foreach (var contentPageItem in contentPage)
                                    {
                                        string title = contentPageItem.Value<string>("contentPageTitle");
                                        <a class="dropdown-item" href="@contentPageItem.Url">@title</a>
                                    }
                                }
                            </div>
                        </li>
                    }
                    <li id="search" class="nav-item">
                        <i class="text-light fa-solid fa-magnifying-glass"></i>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline my-2 my-lg-0">
                            <input id="text-box-search" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>
<script>
    $(document).ready(function () {
        //mostra a text-box search
        $("#search").click(function () {
            $("#text-box-search").animate({
                opacity: "toggle",
                width: "toggle"
            });
        });
    });
</script>