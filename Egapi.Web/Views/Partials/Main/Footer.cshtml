@inherits Umbraco.Web.Mvc.UmbracoViewPage
<a href="#" class="mx-auto d-block btn rounded-circle" id="btn-back-to-top">
    <div class="align-middle">
        <i class="fas fa-arrow-up"></i>
    </div>
</a>
<div class="card text-center text-white footer-card">
    <div class="card-header mt-5">
        <img class="img-fluid" src="../../../imgs/portuguese_technology.png" alt="Alternate Text" />
    </div>
    <div class="card-body">
        <div class="row text-center">
            <div class="col">
                <h3>Financiamentos</h3>
                <div class="row">
                    <div class="col">
                        <img class="img-fluid" src="../../../imgs/financiamentos.png" alt="" />
                    </div>
                </div>
            </div>
            <div class="col">
                <h3>Reconhecimentos</h3>
                <div class="row">
                    <div class="col text-right">
                        <img class="img-fluid" src="../../../imgs/icon_amarelo.png" alt="" />
                    </div>
                    <div class="col text-left">
                        <img class="img-fluid" src="../../../imgs/icon_azul.png" alt="" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-muted row">
        <div class="col text-left">
            &copy; xxxx, 1990-@DateTime.Now.Year, todos os direitos reservados
        </div>
        <div class="col text-right">
            <a href="#">MAPA DO SÍTIO</a> |
            <a href="#">POLÍTICA DE PRIVACIDADE</a> |
            <a href="#">FICHA TÉCNICA</a> |
            <a href="#">FINANCIAMENTOS</a>
        </div>
    </div>
</div>
