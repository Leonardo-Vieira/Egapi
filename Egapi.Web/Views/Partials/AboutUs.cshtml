@inherits Umbraco.Web.Mvc.UmbracoViewPage<Egapi.Core.ViewModel.ContactUsViewModel>
@using Egapi.Core.Controllers;
@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}
<div class="mt-4">
    <div class="row">
        <div class="col">
            <h2 class="title-separator">Caracterização</h2>
            <table class="text-light table table-striped mt-2">
                <tr>
                    <td>Capital Social</td>
                    <td>800.000,00 €</td>
                </tr>
                <tr>
                    <td>NIF</td>
                    <td>502592680</td>
                </tr>
                <tr>
                    <td>Representante Legal</td>
                    <td>Joaquim Cruz</td>
                </tr>
                <tr>
                    <td>Domicílio Legal</td>
                    <td>Rua Padre António Vieira, 99</td>
                </tr>
                <tr>
                    <td>Cidade</td>
                    <td>BRAGA</td>
                </tr>
                <tr>
                    <td>País</td>
                    <td>PORTUGAL</td>
                </tr>
                <tr>
                    <td>Código Postal</td>
                    <td>4710-412</td>
                </tr>
                <tr>
                    <td>Telefone</td>
                    <td>+351 253 240 410</td>
                </tr>
                <tr>
                    <td>Telefax</td>
                    <td>+351 253 240 411</td>
                </tr>
                <tr>
                    <td>E-mail</td>
                    <td>geral@egapi.pt</td>
                </tr>
                <tr>
                    <td>Horário</td>
                    <td>Segunda-Sexta, 9h00-12h30, 14h30-19h00</td>
                </tr>
            </table>
        </div>
        <div class="col">
            <h2 class="title-separator">Marcas registadas</h2>
            <ul>
                <li>EGAPI – INPI nº 286315, 286316, 286317</li>
                <li>BDI – Base de Dados Industrial – INIPI nº 286310 e 286311</li>
                <li>Wine Cellar Information System – INIPI nº 381164</li>
                <li>EGAPI Arena System - INIPI nº 437111</li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h2 class="title-separator">Contacte-nos</h2>
            <div class="mt-2">
                @if ((string)TempData["status"] == "OK")
                {
                    <text>
                        <h3 class="text-center">Obrigado por nos contactar!</h3>
                    </text>
                }
                else
                {
                    using (Html.BeginUmbracoForm<ContactUsController>("HandleContactUs"))
                    {
                        @Html.ValidationSummary()
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(m => m.Name)
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @type = "text" })
                            @Html.ValidationMessageFor(u => u.Name)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "text" })
                            @Html.ValidationMessageFor(u => u.Email)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Message)
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @type = "text" })
                            @Html.ValidationMessageFor(u => u.Message)
                        </div>
                        <button type="submit" value="Send Message" name="send-message-button" class="btn btn-primary">Enviar</button>
                    }
                }
            </div>
        </div>
    </div>
</div>